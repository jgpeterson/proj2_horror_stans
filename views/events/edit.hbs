<form action="/theaters/{{theaterId}}/events/{{event._id}}?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{event.name}}">

    <label for="address">Address</label>
    <input type="text" name="address" value="{{event.address}}" step="any">

    <input type="submit" value="Edit">
</form>